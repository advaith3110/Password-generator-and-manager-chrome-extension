{
    "manifest_version": 3,
    "name": "Password Generator & Manager",
    "description": "Generate and manage secure passwords.",
    "version": "1.0",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }
  